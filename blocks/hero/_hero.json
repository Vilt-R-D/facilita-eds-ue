{
  "definitions": [
    {
      "title": "Hero",
      "id": "hero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Hero",
              "model": "hero",
              "block_logo": {
                "sling:resourceType": "core/franklin/components/block/v1/block",
                "name": "Logo",
                "model": "logo-header"
              },
              "block_background": {
                "sling:resourceType": "core/franklin/components/block/v1/block",
                "name": "Imagem de Fundo",
                "model": "background-header"
              }
            }
          }
        }
      }
    },
    {
      "title": "Logo Cabeçalho",
      "id": "logo-header",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Logo Header",
              "model": "logo-header"
            }
          }
        }
      }
    },
    {
      "title": "Imagem do Fundo",
      "id": "background-header",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Background Image",
              "model": "background-header"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "logo-header",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "logo",
          "label": "Logo do Cabeçalho",
          "description": "Logo que aparecerá no canto superior esquerdo."
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "logo-redirect",
          "label": "URL de Redirecionamento",
          "description": "Local para onde o usuário será redirecionado ao clicar na logo.",
          "validation": {
            "regExp": "^https?:\\/\\/(?:www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b(?:[-a-zA-Z0-9()@:%_\\+.~#?&\\/=]*)$",
            "customErrorMsg": "URL não identificada."
          }
        }
      ]
    },
    {
      "id": "background-header",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "background",
          "label": "Versão Padrão",
          "required": true
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "background-mobile",
          "label": "Versão para Celular",
          "condition": {
            "!": {
              "some": [
                {
                  "missing": [
                    "background"
                  ]
                },
                [
                  "background"
                ]
              ]
            }
          }
        }
      ]
    },
    {
      "id": "hero",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "ancora",
          "label": "Âncora",
          "description": "ID do elemento ao qual a tela vai redirecionada.",
          "validation": {
            "regExp": "^#.*$",
            "customErrorMsg": "Inicie a referência ao ID do elemento com o símbolo: #"
          }
        }
      ]
    }
  ],
  "filters": []
}